doctype html
html
    head
        title Express-app 3
        script(src='index.js' defer)
    body
        h1 Kontakter
        if contacts && contacts.length > 0
            list
                each contact in contacts
                    li
                        p #{contact.name}, #{contact.phone}
                        button(id=contact.id) Opdater
        else 
            p Der er ingen kontakter.
        label(for="tlfnummer") Nyt nummer
        input(id="tlfnummer" type="text")

    style. 
        li {
            display: flex;
            align-items: center;
            gap: 10px;
        }
